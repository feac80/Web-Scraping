<% include ./partials/header %>
<div class="container">
    <div class="row">
       
         <div class="col-md-6 m-auto">  
          <h2 class="text-center display-4">Add a new Web</h2>
                <form action="/webs" method="POST">
                    <div class="form-group">
                        <label for="web[name]" >Name: *</label>   
                        <input class="form-control" type="text" placeholder="Type the Name of the web" name="web[name]" required="required" >
                    </div>
                    <div class="form-group"><div class="form-group">
                        <label for="form_need">Category: *</label>
                        <select id="form_need" name="web[category]" class="form-control" required="required" placeholder="Select the category">
                            <option value=""></option>
                            <option value="Sport">Sport</option>
                            <option value="Job">Job</option>
                            <option value="Services?">Services</option>
                        </select>
                        <div class="help-block with-errors"></div>
                        <small id="emailHelp" class="form-text text-muted">Only these categories are available at this moment</small>
                    </div>
                    </div>
                    <div class="form-group">
                        <label for="web[url]" >Url: *</label>  
                        <input class="form-control" type="text" placeholder="url" name="web[url]"  required="required">                        
                    </div>
                    <div class="form-group">
                       <label for="file" >Image:</label>  
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" name="file"  id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                          </div>
                          
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Submit">
                    </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-muted">
                            <strong>*</strong> These fields are required. </p>
                    </div>
                </div>
                </form>  
            
        </div>
        
    </div>
</div>


